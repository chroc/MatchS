<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Player 1</th>
      <th>Player 2</th>
      <th>Player 3</th>
      <th>Player 4</th>
      <th>Player 5</th>
      <th>Player 6</th>
      <th>Player 7</th>
      <th>Player 8</th>
      <th>Player 9</th>
      <th>Player 10</th>
      <th>Player 11</th>
      <th>Player 12</th>
      <th>Player 13</th>
      <th>Player 14</th>
      <th>Player 15</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.player_1 %></td>
        <td><%= team.player_2 %></td>
        <td><%= team.player_3 %></td>
        <td><%= team.player_4 %></td>
        <td><%= team.player_5 %></td>
        <td><%= team.player_6 %></td>
        <td><%= team.player_7 %></td>
        <td><%= team.player_8 %></td>
        <td><%= team.player_9 %></td>
        <td><%= team.player_10 %></td>
        <td><%= team.player_11 %></td>
        <td><%= team.player_12 %></td>
        <td><%= team.player_13 %></td>
        <td><%= team.player_14 %></td>
        <td><%= team.player_15 %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

