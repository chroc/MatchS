<h3>Create a Team</h3>
<form id="create-team-form" class="col s12 m6 l6" action="/teams" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="row">
      <div class="input-field col s12 m6 l6">
        <input id="name" type="text" class="validate" name="name" required>
        <label for="name">Team Name</label>
      </div>
    </div>
    <div class="row player-inputs">
      <div class="input-field col s12 m6 l6">
        <input id="player_1" type="text" class="validate" name="player_1">
        <label for="player_1">Player 1</label>
      </div>
      <div class="input-field col s12 m6 l6">
        <input id="player_2" type="text" class="validate" name="player_2">
        <label for="player_2">Player 2</label>
      </div>
    </div>

  <div class="row">
    <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
  </div>

  <div class="row">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
  </div>
</form>

<%= link_to 'Back', teams_path %>
