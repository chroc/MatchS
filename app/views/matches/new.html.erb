<h3>Create a Match</h3>
<form class="col s12 m6 l6" action="/matches" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="row">
    <div class="input-field col s12 m6 l6">
      <i class="material-icons prefix">stars</i>
      <input id="name" type="text" class="validate" name="name">
      <label for="name">Match Name</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m6">
      <select id="team_1" class="browser-default">
        <option value="" disabled selected>Choose first team</option>
        <% @teams.each do |team| %>
          <option value="<%= team.name %>" name="team_1"><%= team.name %></option>
        <% end %>
      </select>
    </div>
    <div class="input-field col s12 m6">
      <select id="team_2" class="browser-default">
        <option value="" disabled selected>Choose second team</option>
        <% @teams.each do |team| %>
          <option value="<%= team.name %>" name="team_2"><%= team.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12 m6 l6">
      <input id="date" type="date" class="datepicker" name="date" placeholder="Select the date of the match">
    </div>
    <div class="input-field col s12 m6 l6">
      <input id="time" type="time" class="validate" name="time">
    </div>
  </div>
  <h4>Select the field</h4>
  <div class="row">
    <% @fields.each do |field| %>
    <div class="col s12 m6 l6">
      <div class="card">
        <input name="field" type="radio" id="<%= field.id %>" value="<%= field.name %>" />
        <label for="<%= field.id %>"></label>
        <div class="card-image">
          <img height="270" width="350" src="<%= field.img %>">
          <span class="card-title"><%= field.name %></span>
        </div>
        <div class="card-content">
          <p><%= field.additional_info %></p>
        </div>
        <div class="card-action">
          <a href="/fields/<%= field.id %>">View Stadium</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
  </div>
</form>
<%= link_to 'Back', matches_path %>
