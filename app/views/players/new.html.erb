<h3>Join us</h3>
    <form class="col s12 m6 l6" action="/players" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="row">
        <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">account_circle</i>
          <input id="first_name" type="text" class="validate" name="first_name" required>
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s12 m6 l6">
          <input id="last_name" type="text" class="validate" name="last_name">
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">email</i>
          <input id="email" type="email" class="validate" name="email">
          <label for="email">Email</label>
        </div>
        <div class="input-field col s12 m6 l6">
          <input id="password" type="password" class="validate" name="password">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">schedule</i>
          <input id="birthdate" type="date" class="datepicker" name="birthdate" placeholder="Select your Birthdate">
        </div>
        <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">perm_identity</i>
          <input name="genre" type="radio" id="male" value="male" />
          <label for="male">Male</label>
          <input name="genre" type="radio" id="female" value="female" />
          <label for="female">Female</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6 l6">
          <i class="material-icons prefix">star</i>
          <input type="text" name="position_1" id="position_1">
          <label for="position_1">Prefered position</label>
        </div>
        <div class="input-field col s12 m6 l6">
          <input type="text" name="position_2" id="position_2">
          <label for="position_2">Second position</label>
        </div>
      </div>
      <div class="row">
        <textarea id="additional_info" name="additional_info" class="materialize-textarea" placeholder="Additional info"></textarea>
      </div>
      <div class="row">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
